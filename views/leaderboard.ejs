<div class="max-w-3xl mx-auto p-6 text-white font-sans bg-gradient-to-b from-black to-gray-900 min-h-screen">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-extrabold text-yellow-400 tracking-widest">🏆 Leaderboard</h1>
    <a href="/" class="text-yellow-300 hover:underline text-sm">← Back to Vote</a>
  </div>

  <div class="bg-black bg-opacity-70 p-6 rounded-xl shadow-lg border border-yellow-500">
    <ol class="space-y-6">
      <% leaderboard.forEach((item, index) => {
           const playerObj = players.find(p => p.name === item.player);
      %>
        <li class="flex items-center space-x-6 p-4 rounded-lg bg-gray-900 bg-opacity-80 shadow-md hover:scale-[1.02] transition-all duration-300">
          <span class="text-2xl font-extrabold text-yellow-400 w-8 text-center">
            <% if(index === 0) { %>🥇<% } else if(index === 1) { %>🥈<% } else if(index === 2) { %>🥉<% } else { %><%= index + 1 %>.<% } %>
          </span>
          <img src="<%= playerObj?.img || '/images/default.jpg' %>" alt="<%= item.player %>"
               class="w-20 h-20 rounded-full object-cover border-4 border-yellow-500 shadow-md" />
          <div class="flex-1">
            <p class="text-xl font-semibold text-yellow-200 tracking-wide"><%= item.player %></p>
          </div>
          <span class="text-yellow-400 text-xl font-bold"><%= item.score %> pts</span>
        </li>
      <% }) %>
    </ol>
  </div>
</div>
