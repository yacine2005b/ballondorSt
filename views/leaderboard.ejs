<div class="max-w-3xl mx-auto p-4 sm:p-6 text-white font-sans bg-gradient-to-b from-black to-gray-900 min-h-screen">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 space-y-4 sm:space-y-0">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-yellow-400 tracking-widest">🏆 Leaderboard</h1>
    <a href="/" class="text-yellow-300 hover:underline text-sm sm:text-base">← Back to Vote</a>
  </div>

  <div class="bg-black bg-opacity-70 p-4 sm:p-6 rounded-xl shadow-lg border border-yellow-500">
    <ol class="space-y-4">
      <% leaderboard.forEach((item, index) => {
           const playerObj = players.find(p => p.name === item.player);
      %>
        <li class="flex flex-col sm:flex-row items-center sm:items-center sm:space-x-6 space-y-3 sm:space-y-0 p-4 rounded-lg bg-gray-900 bg-opacity-80 shadow-md hover:scale-[1.02] transition-all duration-300">
          <span class="text-xl sm:text-2xl font-extrabold text-yellow-400 sm:w-8 text-center sm:text-left">
            <% if(index === 0) { %>🥇<% } else if(index === 1) { %>🥈<% } else if(index === 2) { %>🥉<% } else { %><%= index + 1 %>.<% } %>
          </span>

          <img src="<%= playerObj?.img || '/images/default.jpg' %>"
               alt="<%= item.player %>"
               class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover border-4 border-yellow-500 shadow-md" />

          <div class="flex flex-col sm:flex-row justify-between items-center sm:items-center flex-1 w-full sm:w-auto">
            <p class="text-lg sm:text-xl font-semibold text-yellow-200 text-center sm:text-left tracking-wide sm:mr-auto sm:pl-4">
              <%= item.player %>
            </p>
            <span class="text-yellow-400 text-base sm:text-xl font-bold mt-2 sm:mt-0">
              <%= item.score %> pts
            </span>
          </div>
        </li>
      <% }) %>
    </ol>
  </div>
</div>
