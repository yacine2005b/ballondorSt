<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Voting App' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 font-sans min-h-screen">
<nav class="bg-white shadow">
  <div class="max-w-5xl mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-blue-600">üèÜST Ballon d'Or Vote</a>

    <!-- Hamburger Button (mobile only) -->
    <button id="menu-btn" class="lg:hidden text-gray-600 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Nav Links -->
    <div id="nav-links" class="hidden lg:flex space-x-8 text-lg font-medium text-gray-700">
      <% if (currentUser) { %>
        <a href="/" class="hover:text-blue-600 transition">Vote</a>
        <a href="/leaderboard" class="hover:text-blue-600 transition">Leaderboard</a>
         <a href="/votes-summary" class="text-gray-700 hover:text-blue-600">Users Votes</a>
        <a href="/logout" class="text-red-600 hover:underline transition">Logout</a>
      <% } else { %>
        <a href="/login" class="hover:text-blue-600 transition">Login</a>
        <a href="/register" class="hover:text-blue-600 transition">Register</a>
      <% } %>
    </div>
  </div>

  <!-- Mobile menu: vertical list -->
  <div id="mobile-menu" class="hidden bg-white border-t border-gray-200 lg:hidden">
    <div class="flex flex-col px-4 py-3 space-y-2 text-gray-700 font-medium">
      <% if (currentUser) { %>
        <a href="/" class="hover:text-blue-600 transition">Vote</a>
        <a href="/leaderboard" class="hover:text-blue-600 transition">Leaderboard</a>
          <a href="/votes-summary" class="text-gray-700 hover:text-blue-600">Users Votes</a>
        <a href="/logout" class="text-red-600 hover:underline transition">Logout</a>
      <% } else { %>
        <a href="/login" class="hover:text-blue-600 transition">Login</a>
        <a href="/register" class="hover:text-blue-600 transition">Register</a>
      <% } %>
    </div>
  </div>
</nav>
  <!-- Page content -->
  <main class="max-w-4xl mx-auto px-4">
    <%- body %>
  </main>
</body>
</html>
<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Highlight current page in both menus
  const highlightLinks = (container) => {
    const links = container.querySelectorAll('a');
    links.forEach(link => {
      if (link.href === window.location.href) {
        link.classList.add('text-blue-600', 'font-bold', 'underline');
      }
    });
  };

  highlightLinks(document.getElementById('nav-links'));
  highlightLinks(document.getElementById('mobile-menu'));
</script>