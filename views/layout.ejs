<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Voting App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-b from-black to-gray-900 text-white font-sans min-h-screen">
  <!-- Navigation Bar -->
  <nav class="bg-black bg-opacity-90 border-b border-yellow-500 shadow-lg">
    <div class="max-w-5xl mx-auto px-4 py-4 flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-extrabold text-yellow-400 hover:underline tracking-wide">üèÜ ST Ballon d'Or Vote</a>

      <!-- Hamburger Button (mobile) -->
      <button id="menu-btn" class="lg:hidden text-yellow-300 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop Nav -->
      <div id="nav-links" class="hidden lg:flex space-x-8 text-lg font-semibold text-yellow-300">
        <% if (currentUser) { %>
          <a href="/" class="hover:text-yellow-400 transition">Vote</a>
          <a href="/leaderboard" class="hover:text-yellow-400 transition">Leaderboard</a>
          <% if (currentUser && currentUser.email === 'yacine@gmail.com') { %>
          <a href="/votes-summary" class="hover:text-yellow-400 transition">Users Votes</a>
          <% } %>
          <a href="/logout" class="text-red-400 hover:text-red-500 transition">Logout</a>
        <% } else { %>
          <a href="/login" class="hover:text-yellow-400 transition">Login</a>
          <a href="/register" class="hover:text-yellow-400 transition">Register</a>
        <% } %>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden bg-black bg-opacity-95 border-t border-yellow-500 lg:hidden">
      <div class="flex flex-col px-4 py-4 space-y-2 text-yellow-300 font-semibold">
        <% if (currentUser) { %>
          <a href="/" class="hover:text-yellow-400 transition">Vote</a>
          <a href="/leaderboard" class="hover:text-yellow-400 transition">Leaderboard</a>
          <% if (currentUser && currentUser.email === 'yacine@gmail.com') { %>
          <a href="/votes-summary" class="hover:text-yellow-400 transition">Users Votes</a>
          <% } %>
          <a href="/logout" class="text-red-400 hover:text-red-500 transition">Logout</a>
        <% } else { %>
          <a href="/login" class="hover:text-yellow-400 transition">Login</a>
          <a href="/register" class="hover:text-yellow-400 transition">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto px-4 py-10">
    <%- body %>
  </main>

  <!-- Scripts -->
<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });


  const highlightLinks = (container) => {
    const links = container.querySelectorAll('a');
    const currentPath = window.location.pathname.replace(/\/$/, '');

    links.forEach(link => {
      const linkPath = new URL(link.href).pathname.replace(/\/$/, '');
      if (linkPath === currentPath) {
        link.classList.add('text-yellow-400', 'underline', 'font-bold');
      }
    });
  };

  highlightLinks(document.getElementById('nav-links'));
  highlightLinks(document.getElementById('mobile-menu'));
</script>

</body>
</html>
