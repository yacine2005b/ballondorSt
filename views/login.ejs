<div class="max-w-md mx-auto bg-black bg-opacity-80 p-8 rounded-xl shadow-lg border border-yellow-500 text-white font-sans">
  <h2 class="text-3xl font-extrabold text-yellow-400 text-center mb-6 tracking-wide uppercase">Login to Vote</h2>

  <form method="POST" action="/login" class="space-y-5">
    <div>
      <input
        name="email"
        type="email"
        placeholder="Email"
        required
        class="w-full p-3 rounded-lg bg-gray-900 border-2 border-yellow-400 text-white placeholder-yellow-200 focus:outline-none focus:ring-2 focus:ring-yellow-500"
      />
    </div>

    <div>
      <input
        name="password"
        type="password"
        placeholder="Password"
        required
        class="w-full p-3 rounded-lg bg-gray-900 border-2 border-yellow-400 text-white placeholder-yellow-200 focus:outline-none focus:ring-2 focus:ring-yellow-500"
      />
    </div>

    <% if (error) { %>
      <p class="text-red-500 text-sm text-center"><%= error %></p>
    <% } %>

    <button
      type="submit"
      class="w-full py-3 px-4 bg-yellow-500 hover:bg-yellow-400 text-black font-bold rounded-lg shadow-md transition-all duration-300"
    >
      Login
    </button>
  </form>

  <p class="mt-6 text-center text-sm text-yellow-200">
    Don't have an account?
    <a href="/register" class="text-yellow-400 hover:underline font-semibold">Register here</a>
  </p>
</div>
